<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.ShowImageViewModel" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:visibility="@{viewModel.getShowSponsor ? view.VISIBLE : view.GONE}"
            android:layout_width="@dimen/p_60dp"
            android:layout_height="@dimen/p_60dp"
            android:layout_gravity="center"
            android:padding="@dimen/size_5"
            app:civ_border_width="1dp"
            android:layout_centerInParent="true"
            app:setPlaceholder="@{@drawable/no_image}"
            app:setRoundImage="@{viewModel.imageUrl}"
            app:civ_border_color="@color/light_white"
            tools:ignore="TooDeepLayout"/>

        <ImageView
            android:visibility="@{viewModel.getShowSponsor ? view.GONE : view.VISIBLE}"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_gravity="center"
            android:padding="@dimen/size_5"
            app:civ_border_width="1dp"
            app:setPlaceholder="@{@drawable/no_image}"
            app:setRoundImage="@{viewModel.imageUrl}"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/light_white"
            tools:ignore="TooDeepLayout"/>


        <TextView
            android:visibility="@{viewModel.getShowIcon ? view.VISIBLE : view.GONE}"
            android:background="@drawable/green_circle"
            android:backgroundTint="@color/black"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:alpha=".5"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="99 +"
            tools:ignore="SmallSp" />

    </RelativeLayout>

</layout>