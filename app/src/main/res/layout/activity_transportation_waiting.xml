<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mViewModel"
            type="com.eazy.stcbusiness.base.BaseViewModelObservation" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.TransportationWaitingViewModel" />

    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <fragment
                    android:id="@+id/google_map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_margin="@dimen/size_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_border"
                    android:padding="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:layout_gravity="center"
                            android:contentDescription="@string/content_image"
                            android:padding="@dimen/margin_10"
                            android:src="@drawable/stc_home_logo"
                            app:tint="@color/book_yellow" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/app_name"
                                android:text="Siem Reap Tourism Club"
                                android:textColor="@color/black"
                                android:paddingVertical="@dimen/size_3dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/app_name"
                                android:text="SAM MEDI has been accepted your booking"
                                android:paddingVertical="@dimen/size_3dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:id="@+id/iconBack"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/title_profile"
                    android:focusable="true"
                    android:src="@drawable/arrow_back_left"
                    app:delayClickListener="@{()-> viewModel.onDismissButton()}"
                    app:tint="@color/black" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_sheet_bg"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/padding_5"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="3dp"
                    android:background="@color/light_grey" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Driver will Arrived in 4 minutes"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_bold"
                        android:textSize="@dimen/size_18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font_regular"
                        android:text="Tuk Tuk-Yellow | 9890"
                        android:textSize="@dimen/size_14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/size_3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_view_shape"
                    android:backgroundTint="@color/light_white"
                    android:padding="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginBottom="@dimen/margin_10"
                        android:id="@+id/pickUpLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/size_50"
                                android:layout_height="@dimen/size_50"
                                android:layout_gravity="center"
                                android:contentDescription="@string/content_image"
                                android:src="@drawable/transportation_driver" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:text="Horm Hy"
                                android:textAllCaps="true"
                                android:paddingVertical="@dimen/size_3dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/size_50"
                                android:layout_height="@dimen/size_50"
                                android:layout_gravity="center"
                                android:contentDescription="@string/content_image"
                                android:background="@drawable/transportation_bg_more"
                                android:padding="@dimen/margin_10"
                                android:src="@drawable/transportation_support" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:text="@string/support"
                                android:paddingVertical="@dimen/size_3dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/size_50"
                                android:layout_height="@dimen/size_50"
                                android:layout_gravity="center"
                                android:contentDescription="@string/content_image"
                                android:background="@drawable/transportation_bg_more"
                                android:padding="@dimen/margin_10"
                                android:src="@drawable/transportation_more" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:text="@string/cancel_label"
                                android:paddingVertical="@dimen/size_3dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>