<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.ThingsToDoDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_main"
        tools:context=".ui.todo_ui.ThingToDoDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                app:viewModel="@{viewModel}"
                android:id="@+id/toolbar"
                layout="@layout/custom_toolbar"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/moto_cycle"
                            android:contentDescription="@string/content_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_gravity="center"
                            android:layout_marginTop="-30dp"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            app:cardElevation="0dp"
                            tools:targetApi="p">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size_5"
                                android:padding="@dimen/size_5"
                                android:background="@drawable/card_view_shape"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/size_5"
                                        android:src="@drawable/stc_home_logo"
                                        tools:ignore="TooDeepLayout" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/size_5"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="start"
                                                android:text="@{viewModel.getName}"
                                                tools:text="Klook"
                                                android:fontFamily="@font/font_bold"
                                                android:textColor="@color/black"
                                                android:textSize="18dp"
                                                tools:ignore="SpUsage" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/size_14sp"
                                                android:text="08:30 Am-08:30 Pm"
                                                android:textColor="@color/black"
                                                tools:ignore="SpUsage" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:id="@+id/imgStar"
                                                    android:layout_width="@dimen/size_24"
                                                    android:layout_height="@dimen/size_24"
                                                    android:src="@drawable/ic_star"
                                                    android:contentDescription="@string/app_name" />

                                                <TextView
                                                    android:id="@+id/iconStar"
                                                    android:layout_width="wrap_content"
                                                    android:text="99 reviews"
                                                    android:maxLines="1"
                                                    android:layout_marginHorizontal="@dimen/size_5"
                                                    android:layout_gravity="center"
                                                    android:textColor="@color/black"
                                                    android:textSize="@dimen/size_14sp"
                                                    android:layout_height="wrap_content"/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="@dimen/size_20"
                                                    android:layout_height="@dimen/size_20"
                                                    android:src="@drawable/ic_clock"
                                                    android:contentDescription="@string/app_name"
                                                    app:tint="@color/gray" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:text="10 m"
                                                    android:maxLines="1"
                                                    android:layout_marginHorizontal="@dimen/size_5"
                                                    android:layout_gravity="center"
                                                    android:textSize="@dimen/size_14sp"
                                                    android:layout_height="wrap_content"/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:gravity="end"
                                                android:layout_gravity="end"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="@dimen/size_20"
                                                    android:layout_height="@dimen/size_20"
                                                    android:src="@drawable/location"
                                                    android:contentDescription="@string/app_name" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:text="1.8 km"
                                                    android:maxLines="1"
                                                    android:layout_marginHorizontal="@dimen/size_5"
                                                    android:layout_gravity="center"
                                                    android:textSize="@dimen/size_14sp"
                                                    android:layout_height="wrap_content"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_margin="@dimen/size_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:text="Quad Bike Adventure in Siem Reap, Cambodia Klook Visit"
                                    android:textColor="@color/black"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/card_view_shape"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:layout_margin="@dimen/size_5"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:text="@string/you_will_know"
                                    android:fontFamily="@font/font_bold"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    tools:ignore="SpUsage" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/light_grey"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/padding_8dp"
                                        android:text="Pickup"
                                        android:textColor="@color/black"
                                        tools:ignore="SpUsage" />

                                    <View
                                        android:layout_width="0.5dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/light_grey"/>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/padding_8dp"
                                        android:text="30mns/Tour"
                                        android:textColor="@color/black"
                                        tools:ignore="SpUsage" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/light_grey"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/padding_8dp"
                                        android:text="Allow"
                                        android:textColor="@color/black"
                                        tools:ignore="SpUsage" />

                                    <View
                                        android:layout_width="0.5dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/light_grey"/>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="10dp"
                                        android:text="140kg"
                                        android:textColor="@color/black"
                                        tools:ignore="SpUsage" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/light_grey"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/padding_8dp"
                                        android:text="Pickup"
                                        android:textColor="@color/black"
                                        tools:ignore="SpUsage" />

                                    <View
                                        android:layout_width="0.5dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/light_grey"/>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/padding_8dp"
                                        android:text="30mns/Tour"
                                        android:textColor="@color/black"
                                        tools:ignore="SpUsage" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/card_view_shape"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:layout_margin="@dimen/size_5"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:text="@string/description"
                                    android:fontFamily="@font/font_bold"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="10dp"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:text="@{viewModel.getDescription}"
                                    android:textColor="@color/black"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginVertical="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/card_view_shape"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:layout_margin="@dimen/size_5"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:text="@string/term_condition"
                                    android:fontFamily="@font/font_bold"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="10dp"
                                    android:text="@{viewModel.getTermCondition}"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <include
                app:viewModel="@{viewModel}"
                layout="@layout/bottom_show_price_layout"/>

        </LinearLayout>

    </RelativeLayout>

</layout>