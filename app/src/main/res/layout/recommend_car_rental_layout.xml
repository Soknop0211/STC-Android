<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.RecommendCarRentalViewModel" />
    </data>


    <RelativeLayout
        android:id="@+id/mainLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_5"
        android:layout_marginVertical="@dimen/margin_10">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/margin_10"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:background="@color/colorAppPrimary"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_50"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:id="@+id/icon_bank"
                    android:src="@drawable/transportation_standard"
                    app:setPlaceholder="@{@drawable/no_image}"
                    app:setImageUrl="@{viewModel.mUrl}"
                    android:contentDescription="@string/content_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@{viewModel.mTitle}"
                        android:textAllCaps="true"
                        android:paddingTop="@dimen/size_3dp"
                        android:layout_width="match_parent"
                        tools:text="@string/app_name"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/descriptionTv"
                        android:textSize="13sp"
                        android:text="@{viewModel.mDescription}"
                        tools:text="@string/app_name"
                        android:paddingVertical="@dimen/size_3dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textColor="@color/light_white"
                        android:fontFamily="@font/font_regular"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:padding="@dimen/padding_5"
                        android:background="@drawable/custom_background__car_rental_gradient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            tools:text="35.50 USD"
                            android:text="@{viewModel.mPrice}"
                            android:layout_gravity="center"
                            android:gravity="center|end"
                            android:textColor="@color/white"
                            android:layout_height="match_parent" />

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="13sp"
                            android:text="@string/per_day"
                            android:paddingVertical="@dimen/size_3dp"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center|start"
                            android:textColor="@color/black"
                            android:fontFamily="@font/font_regular"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>