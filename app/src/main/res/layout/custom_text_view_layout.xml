<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_5"
    android:background="@drawable/card_view_shape"
    android:backgroundTint="@color/light_white"
    android:id="@+id/mainLayout"
    tools:context=".ui.todo_ui.ThingToDoDetailTicketActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:visibility="gone"
        android:id="@+id/icon"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/padding_5"
        android:contentDescription="@string/title_profile"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/location_v2"
        app:tint="@color/black" />

    <TextView
        android:layout_toEndOf="@+id/icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/add_people"
        android:textSize="17sp"
        android:padding="@dimen/margin_10"
        android:id="@+id/txt"
        android:textColor="@color/black"/>

</RelativeLayout>
