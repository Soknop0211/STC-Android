<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:adjustViewBounds="true"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardViewLayout"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewPager"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/no_image"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:padding="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    app:civ_border_color="@color/light_white"
                    android:src="@drawable/stc_home_logo"
                    android:layout_margin="@dimen/padding_5"
                    app:civ_border_width="1dp"
                    tools:ignore="TooDeepLayout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:layout_marginVertical="@dimen/size_3dp"
                        android:text="Hyatt Regency Phnom Penh"
                        android:fontFamily="@font/font_regular"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:layout_marginVertical="@dimen/size_3dp"
                        android:maxLines="2"
                        android:text="Friday Night with MINA at Metropole Underground"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:maxLines="2"
                        android:layout_marginVertical="@dimen/size_3dp"
                        android:text="Wed 06 September, 2023 09:00"
                        android:textColor="@color/colorAppPrimary"
                        android:textSize="13sp"
                        tools:ignore="SpUsage" />

                    <LinearLayout
                        android:layout_marginVertical="@dimen/size_3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgStar"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/location"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/iconStar"
                            android:layout_width="wrap_content"
                            android:text="Hytt Regency Phnom Penh"
                            android:maxLines="1"
                            android:layout_marginHorizontal="@dimen/size_5"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>