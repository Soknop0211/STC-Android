<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.TransportationRecommendDetailBottomSheetViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_main"
        tools:context=".ui.todo_ui.ThingToDoDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/transportation_standard"
                            android:contentDescription="@string/content_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_gravity="center"
                            android:background="@drawable/bottom_sheet_bg"
                            android:layout_marginTop="-10dp"
                            android:padding="@dimen/margin_10"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:text="@{viewModel.getTitle}"
                                tools:text="BMW- I8 for rent in siem Reap"
                                android:fontFamily="@font/font_bold"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                tools:ignore="SpUsage" />

                            <LinearLayout
                                android:layout_marginVertical="@dimen/padding_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:text="@{viewModel.getPrice}"
                                    tools:text="230.00 USD / "
                                    android:fontFamily="@font/font_bold"
                                    android:textColor="@color/colorAppPrimary"
                                    android:textSize="18dp"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    android:text="@string/per_day"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/font_regular"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginVertical="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:text="@string/description"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:text="@{viewModel.getDescription}"
                                    android:textColor="@color/black"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginVertical="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:text="@string/feature_in_car"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    tools:ignore="SpUsage" />

                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:scrollbars="none"
                                    android:layout_marginBottom="@dimen/padding_5"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/peopleAdded"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" />

                                </HorizontalScrollView>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <include
                app:viewModel="@{viewModel}"
                layout="@layout/bottom_show_price_layout"/>

        </LinearLayout>

    </RelativeLayout>

</layout>