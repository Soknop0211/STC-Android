<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.ItemImageViewModel" />
    </data>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="250dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="16:13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="0dp"
                android:scaleType="fitXY"
                android:src="@{viewModel.mUrl, default = @drawable/taxi_recommend}"
                app:shapeAppearanceOverlay="@style/cornerImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>