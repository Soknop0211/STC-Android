<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="view"
        type="android.view.View" />

    <import type="android.text.TextUtils" />

    <variable
        name="viewModel"
        type="com.eazy.stcbusiness.view_model.SuggestedRideCarRentalViewModel" />
</data>

<LinearLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5"
    android:padding="@dimen/padding_5"
    android:background="@{viewModel.isCardBackground ? @drawable/custom_background_border : @drawable/custom_background_card_item_type, default = @drawable/custom_background_card_item_type}"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50"
        android:layout_gravity="center"
        android:padding="@dimen/size_5"
        android:adjustViewBounds="true"
        android:id="@+id/icon_bank"
        android:src="@drawable/transportation_standard"
        app:setPlaceholder="@{@drawable/no_image}"
        app:setImageUrl="@{viewModel.mUrl}"
        android:contentDescription="@string/content_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/size_5"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@{viewModel.mTitle}"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    tools:text="@string/app_name"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="@{viewModel.isCanMinus ? view.VISIBLE : view.GONE}"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedWeights"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_minus_24"
                        android:background="@drawable/bg_swap_app_appbar_strok"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:id="@+id/minus"
                        android:onClick="@{()-> viewModel.onClickMinusItem()}"
                        tools:ignore="NestedWeights"
                        app:tint="@color/colorPrimaryDark"
                        android:focusable="true" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.getNumberCount}"
                    tools:text="1"
                    android:id="@+id/numVal"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/padding_5"
                    android:gravity="center" />

                <LinearLayout
                    android:visibility="@{viewModel.isCanAdd ? view.VISIBLE : view.GONE}"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_add_24"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:onClick="@{()-> viewModel.onClickAddItem()}"
                        android:background="@drawable/bg_swap_app_appbar_strok"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/add"
                        app:tint="@color/colorPrimaryDark"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/descriptionTv"
            android:textSize="13sp"
            android:text="@{viewModel.mDescription}"
            tools:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:textColor="@color/gray"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="@{viewModel.isCanViewDetail ? view.VISIBLE : view.GONE}"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"
                android:paddingVertical="@dimen/padding_5"
                android:paddingHorizontal="@dimen/size_20"
                android:layout_marginVertical="@dimen/margin_10"
                android:text="@string/detail"
                app:delayClickListener="@{()-> viewModel.onClickViewDetail()}"
                android:background="@drawable/shape_border"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                style="@style/SelectableItemBackground"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@{viewModel.mPrice}"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    tools:text="15.00 USD"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textColor="@color/colorAppPrimary"
                    android:layout_height="match_parent" />

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:text="@string/per_day"
                    android:paddingVertical="@dimen/size_3dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAppPrimary"
                    android:fontFamily="@font/font_regular"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

</layout>