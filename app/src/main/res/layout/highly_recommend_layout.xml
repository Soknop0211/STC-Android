<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/size_5"
        app:cardCornerRadius="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:id="@+id/cardViewLayout"
            android:background="@drawable/card_view_shape"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_margin="@dimen/size_5"
                app:cardCornerRadius="@dimen/margin_10">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/discount_banner"
                    android:contentDescription="@string/app_name" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/size_5">

                <TextView
                    android:id="@+id/txtTittle"
                    android:layout_width="match_parent"
                    android:text="Angkor Wat Park Zip Line Adventure in Siem Reap"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_regular"
                    android:textSize="@dimen/size_14sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgStar"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:src="@drawable/ic_star"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/iconStar"
                        android:layout_width="wrap_content"
                        android:text="5.0"
                        android:maxLines="3"
                        android:layout_marginHorizontal="@dimen/size_5"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_bold"
                        android:textSize="@dimen/size_14sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="@dimen/size_3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/originalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="$23"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_light"
                        android:textSize="@dimen/size_14sp"
                        android:layout_marginEnd="@dimen/size_5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceAfterDiscountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="$19.99"
                        android:layout_marginHorizontal="@dimen/size_5"
                        android:textColor="@color/colorAppPrimary"
                        android:textSize="@dimen/size_16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:src="@drawable/location"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Angkor Thom"
                        android:maxLines="3"
                        android:layout_marginHorizontal="@dimen/size_5"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>