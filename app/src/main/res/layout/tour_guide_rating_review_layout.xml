<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/padding_5"
    android:layout_marginBottom="@dimen/padding_5"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10">

    <LinearLayout
        android:background="@drawable/custom_background_card_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:src="@drawable/transportation_driver"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/colorAppPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/padding_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/size_24"
                            android:layout_height="@dimen/size_24"
                            android:src="@drawable/ic_star"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="4.5"
                            android:maxLines="1"
                            android:layout_marginHorizontal="@dimen/size_5"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <ImageView
                        android:gravity="end"
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:src="@drawable/transportation_more"
                        app:tint="@color/black_light1"
                        android:contentDescription="@string/content_image" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/padding_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|end">

                    <TextView
                        android:id="@+id/nameTv"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="- - -"
                        android:textSize="18sp"/>


                    <TextView
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black_light1"
                        android:layout_height="wrap_content"
                        android:text="2 Month ago"
                        android:paddingStart="@dimen/margin_10"
                        android:gravity="end"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Dynasty's Logan floor plan! This spacious Read more"
            android:padding="@dimen/padding_5"
            android:textColor="@color/gray" />


    </LinearLayout>

</androidx.cardview.widget.CardView>