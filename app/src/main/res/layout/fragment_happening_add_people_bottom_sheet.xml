<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.AddPeopleViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/fragment_sheet"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="3dp"
                    android:background="@color/light_grey" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_close_24"
                    android:layout_margin="@dimen/size_5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:delayClickListener="@{()-> viewModel.onDismissButton()}"
                    app:tint="@color/black"
                    android:focusable="true"
                    android:contentDescription="@string/content_image" />

                <TextView
                    android:id="@+id/titleItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/who_do_you_book_for"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_bold"
                    android:textSize="@dimen/size_18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/size_5"
                    android:text="@string/first_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_regular"
                    android:textSize="@dimen/size_18sp"
                    android:layout_marginBottom="@dimen/padding_5"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15"
                    android:hint="@string/please_enter_the_first_name"
                    android:text="@={viewModel.mFirstName}"
                    app:addTextChangeListener="@{viewModel.onInputChangeListener()}"
                    android:background="@drawable/custom_background_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/size_5"
                    android:text="@string/last_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_regular"
                    android:textSize="@dimen/size_18sp"
                    android:layout_marginBottom="@dimen/padding_5"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15"
                    android:text="@={viewModel.mLastName}"
                    app:addTextChangeListener="@{viewModel.onInputChangeListener()}"
                    android:hint="@string/please_enter_the_last_name"
                    android:background="@drawable/custom_background_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/size_5"
                    android:text="@string/phone_number"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_regular"
                    android:textSize="@dimen/size_18sp"
                    android:layout_marginBottom="@dimen/padding_5"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15"
                    android:text="@={viewModel.mPhoneNumber}"
                    app:addTextChangeListener="@{viewModel.onInputChangeListener()}"
                    android:hint="@string/please_enter_the_phone_number"
                    android:inputType="number"
                    android:background="@drawable/custom_background_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/size_5"
                    android:text="@string/email_optional"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_regular"
                    android:textSize="@dimen/size_18sp"
                    android:layout_marginBottom="@dimen/padding_5"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15"
                    android:text="@={viewModel.mEmail}"
                    app:addTextChangeListener="@{viewModel.onInputChangeListener()}"
                    android:hint="@string/please_enter_the_email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/custom_background_border"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/btnConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/confirm"
                        android:textSize="17sp"
                        style="@style/SelectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/card_view_shape"
                        android:backgroundTint="@{viewModel.mValidButton ? @color/colorAppPrimary : @color/gray, default = @color/gray}"
                        android:enabled="@{viewModel.mValidButton}"
                        app:delayClickListener="@{()-> viewModel.onClickButtonAdd()}"
                        android:padding="@dimen/margin_15"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>