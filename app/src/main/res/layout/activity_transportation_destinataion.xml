<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mViewModel"
            type="com.eazy.stcbusiness.base.BaseViewModelObservation" />

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.TransportationDestinationViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/custom_background_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                android:elevation="0dp"
                app:elevation="0dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_5"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconBack"
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="@dimen/margin_30"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/title_profile"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        app:delayClickListener="@{()-> viewModel.onDismissButton()}"
                        android:src="@drawable/baseline_close_24"
                        android:focusable="true"
                        app:tint="@color/dark_gray" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/padding_5"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="2"
                        android:text="@string/destination"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        tools:ignore="SpUsage"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size_5"
                        android:layout_marginVertical="@dimen/margin_10"
                        android:clickable="true"
                        android:focusable="true"
                        app:delayClickListener="@{()-> viewModel.onClickChooseMap()}"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/title_profile"
                            android:src="@drawable/location_v2"
                            app:tint="@color/colorAppPrimary" />

                        <TextView
                            android:id="@+id/titleToolbar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/choose_map"
                            android:fontFamily="@font/font_regular"
                            android:textSize="@dimen/size_14sp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/shape_border"
                    android:padding="@dimen/margin_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:layout_marginVertical="@dimen/margin_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/title_profile"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/location_v2"
                        app:tint="@color/colorAppPrimary" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/padding_5"
                        android:maxLines="2"
                        android:hint="@string/search"
                        android:background="@color/transparent"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    android:background="@color/light_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/padding_5"
                        android:padding="@dimen/margin_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/font_regular"
                            android:maxLines="2"
                            android:text="@string/saved_place"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_marginHorizontal="@dimen/padding_5"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/peopleAdded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />

                    </HorizontalScrollView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    android:background="@color/light_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/padding_5"
                        android:padding="@dimen/margin_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/font_regular"
                            android:maxLines="2"
                            android:text="@string/search_data"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="2"
                            android:text="@string/clear_line_label"
                            android:fontFamily="@font/font_regular"
                            android:textColor="@color/colorAppPrimary"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginHorizontal="@dimen/padding_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/categoryRecycle"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>