<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.HappeningNowDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_main"
        tools:context=".ui.todo_ui.ThingToDoDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingConstraints">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:id="@+id/imageLayout"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:setPlaceholder="@{@drawable/no_image}"
                                app:setImageUrl="@{viewModel.mUrl}"
                                android:src="@drawable/moto_cycle"
                                android:contentDescription="@string/content_image" />

                            <ImageView
                                android:id="@+id/iconBack"
                                android:layout_width="@dimen/size_25"
                                android:layout_height="@dimen/size_25"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/content_image"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:layout_margin="@dimen/margin_10"
                                app:delayClickListener="@{()-> viewModel.onDismissButton()}"
                                android:src="@drawable/arrow_back_left"
                                android:focusable="true"
                                app:tint="@color/white" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageLayout"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="0dp"
                            tools:targetApi="p">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/card_view_shape"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:layout_margin="@dimen/size_5"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:text="Friday Night with MINA at metropole Underground"
                                    android:fontFamily="@font/font_bold"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/size_18sp" />

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginTop="@dimen/size_20"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/size_20"
                                        android:layout_height="@dimen/size_20"
                                        android:src="@drawable/ic_clock"
                                        android:contentDescription="@string/app_name" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Wed 06 September, 2023"
                                            android:maxLines="3"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/font_bold"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="9:00 AM - 11:00 AM"
                                            android:maxLines="3"
                                            android:paddingVertical="@dimen/size_3dp"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/gray"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/size_20"
                                        android:layout_height="@dimen/size_20"
                                        android:src="@drawable/location"
                                        android:contentDescription="@string/app_name"
                                        app:tint="@color/black" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Phnom Penh, Cambodia"
                                            android:maxLines="3"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/font_bold"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Hyatt Regency Phnom Penh"
                                            android:maxLines="3"
                                            android:paddingVertical="@dimen/size_3dp"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/gray"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/size_20"
                                        android:layout_height="@dimen/size_20"
                                        android:src="@drawable/home_user"
                                        android:contentDescription="@string/app_name"
                                        app:tint="@color/black" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Hosted by"
                                            android:maxLines="3"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/font_bold"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Hyatt Regency Phnom Penh"
                                            android:maxLines="3"
                                            android:paddingVertical="@dimen/size_3dp"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/gray"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="34,000 people are going"
                                        android:maxLines="3"
                                        android:paddingVertical="@dimen/size_3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/gray"
                                        android:textSize="14sp"
                                        android:layout_height="wrap_content"/>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:nestedScrollingEnabled="false"
                                        android:id="@+id/recyclerView"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_10"
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_background_border">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="@string/event_sponsor"
                                        android:maxLines="3"
                                        android:layout_margin="@dimen/margin_10"
                                        android:layout_gravity="center"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/font_bold"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:layout_marginHorizontal="@dimen/margin_10"
                                        android:layout_width="match_parent"
                                        android:layout_marginBottom="@dimen/margin_10"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:nestedScrollingEnabled="false"
                                            android:id="@+id/recyclerViewSponsor"/>

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="@string/become_a_partner"
                                        android:maxLines="3"
                                        style="@style/SelectableItemBackground"
                                        android:padding="@dimen/margin_10"
                                        android:background="@drawable/shape_border"
                                        android:layout_margin="@dimen/margin_10"
                                        android:gravity="center"
                                        android:textColor="@color/colorAppPrimary"
                                        android:fontFamily="@font/font_bold"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="start"
                                        android:layout_margin="@dimen/size_5"
                                        android:text="@string/event_detail"
                                        android:fontFamily="@font/font_bold"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_18sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="Our party girl is here! Special guest singer, Ms. Mina, takes the stage at Metropole Underground on Friday, 18 August for a special performance while you enjoy premium drinks, food, our Live Band  DJs beats. Friday, 18 August 2023From 5:00 PM onwards | Free EntryEntertainment: Metro Band"
                                        android:paddingVertical="@dimen/size_3dp"
                                        android:layout_marginHorizontal="@dimen/size_5"
                                        android:layout_gravity="center"
                                        android:textColor="@color/description"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5"
                android:background="@drawable/custom_line_above_light_gray">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        tools:ignore="Suspicious0dp">

                        <TextView
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/price"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=" 80.00 USD"
                            android:text="@{viewModel.mPriceTotal}"
                            android:id="@+id/totalItemTv"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/padding_8dp"
                    style="@style/SelectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@drawable/card_view_shape"
                        android:backgroundTint="@color/colorAppPrimary"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/confirm"
                        app:delayClickListener="@{()-> viewModel.onClickBookNow()}"
                        android:textSize="17sp"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="@dimen/margin_15"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>