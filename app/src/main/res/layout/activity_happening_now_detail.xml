<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.HappeningNowDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_main"
        tools:context=".ui.todo_ui.ThingToDoDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/moto_cycle"
                            android:contentDescription="@string/content_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:cardElevation="0dp"
                            tools:targetApi="p">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/card_view_shape"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:layout_margin="@dimen/size_5"
                                    android:paddingHorizontal="@dimen/size_5"
                                    android:text="Friday Night with MINA at metropole Underground"
                                    android:fontFamily="@font/font_bold"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/size_18sp" />

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginTop="@dimen/size_20"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/size_20"
                                        android:layout_height="@dimen/size_20"
                                        android:src="@drawable/ic_clock"
                                        android:contentDescription="@string/app_name" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Wed 06 September, 2023"
                                            android:maxLines="3"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/font_bold"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="9:00 AM - 11:00 AM"
                                            android:maxLines="3"
                                            android:paddingVertical="@dimen/size_3dp"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/gray"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/size_20"
                                        android:layout_height="@dimen/size_20"
                                        android:src="@drawable/location"
                                        android:contentDescription="@string/app_name" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Phnom Penh, Cambodia"
                                            android:maxLines="3"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/font_bold"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Hyatt Regency Phnom Penh"
                                            android:maxLines="3"
                                            android:paddingVertical="@dimen/size_3dp"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/gray"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/size_20"
                                        android:layout_height="@dimen/size_20"
                                        android:src="@drawable/ic_user"
                                        android:contentDescription="@string/app_name" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Hosted by"
                                            android:maxLines="3"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/font_bold"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:text="Hyatt Regency Phnom Penh"
                                            android:maxLines="3"
                                            android:paddingVertical="@dimen/size_3dp"
                                            android:layout_marginHorizontal="@dimen/size_5"
                                            android:layout_gravity="center"
                                            android:textColor="@color/gray"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="34,000 people are going"
                                        android:maxLines="3"
                                        android:paddingVertical="@dimen/size_3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/gray"
                                        android:textSize="13sp"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/numberOfPeople"
                                        android:orientation="horizontal" >

                                        <include layout="@layout/custom_image_circle_layout"/>

                                        <include layout="@layout/custom_image_circle_layout"/>

                                        <include layout="@layout/custom_image_circle_layout"/>

                                        <include layout="@layout/custom_image_circle_layout"/>

                                        <include layout="@layout/custom_image_circle_layout"/>

                                        <include layout="@layout/custom_image_circle_layout"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_10"
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_background_border">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="Event Sponsor"
                                        android:maxLines="3"
                                        android:layout_margin="@dimen/margin_10"
                                        android:layout_gravity="center"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/font_bold"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:layout_marginHorizontal="@dimen/margin_10"
                                        android:layout_width="match_parent"
                                        android:layout_marginBottom="@dimen/margin_10"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">

                                            <include layout="@layout/custom_image_circle_layout"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">

                                            <include layout="@layout/custom_image_circle_layout"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">

                                            <include layout="@layout/custom_image_circle_layout"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">

                                            <include layout="@layout/custom_image_circle_layout"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="@string/become_a_partner"
                                        android:maxLines="3"
                                        style="@style/SelectableItemBackground"
                                        android:padding="@dimen/margin_10"
                                        android:background="@drawable/shape_border"
                                        android:layout_margin="@dimen/margin_10"
                                        android:layout_gravity="center"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/font_bold"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginHorizontal="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="start"
                                        android:layout_margin="@dimen/size_5"
                                        android:paddingHorizontal="@dimen/size_5"
                                        android:text="@string/event_detail"
                                        android:fontFamily="@font/font_bold"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_18sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="Friday Night with MINA at metropole Underground.\nFriday Night with MINA at metropole Underground.\nFriday Night with MINA at metropole Underground.\nFriday Night with MINA at metropole Underground.\nFriday Night with MINA at metropole Underground."
                                        android:paddingVertical="@dimen/size_3dp"
                                        android:layout_marginHorizontal="@dimen/size_5"
                                        android:layout_gravity="center"
                                        android:textColor="@color/gray"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <include
                app:viewModel="@{viewModel}"
                layout="@layout/bottom_show_price_layout"/>

        </LinearLayout>

    </RelativeLayout>

</layout>