<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.ThingsToDoDetailTicketViewModel" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_main"
        tools:context=".ui.todo_things.ThingToDoDetailTicketActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                app:viewModel="@{viewModel}"
                android:id="@+id/toolbar"
                layout="@layout/custom_toolbar"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_10"
                        android:padding="@dimen/padding_5"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            android:layout_margin="@dimen/size_5"
                            app:cardCornerRadius="@dimen/margin_10">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/discount_banner"
                                android:contentDescription="@string/app_name" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/size_5">

                            <TextView
                                android:id="@+id/txtTittle"
                                android:layout_width="match_parent"
                                android:text="Half Day Kompong Pluck Floating Village on Tonle Sap with Sunset."
                                android:maxLines="3"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_bold"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_marginVertical="@dimen/padding_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgStar"
                                    android:layout_width="@dimen/size_24"
                                    android:layout_height="@dimen/size_24"
                                    android:src="@drawable/ic_star"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/iconStar"
                                    android:layout_width="wrap_content"
                                    android:text="5.0"
                                    android:maxLines="3"
                                    android:layout_marginHorizontal="@dimen/size_5"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/font_bold"
                                    android:textSize="@dimen/size_14sp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="@dimen/padding_5"
                        android:padding="@dimen/padding_5"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_margin="@dimen/margin_10"
                            android:layout_width="match_parent"
                            android:text="@string/schedule"
                            android:maxLines="3"
                            android:textSize="@dimen/size_16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/font_bold"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                app:delayClickListener="@{()-> viewModel.onClickSelectDate()}"
                                android:background="@drawable/shape_border"
                                android:backgroundTint="@color/light_grey"
                                android:layout_margin="@dimen/padding_8dp"
                                android:padding="@dimen/margin_10"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/size_24"
                                    android:layout_height="@dimen/size_24"
                                    android:src="@drawable/calendar"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:layout_height="match_parent"
                                    android:text="@string/date"
                                    android:paddingHorizontal="@dimen/padding_5"
                                    android:textSize="17sp"
                                    android:textColor="@color/black"
                                    android:focusable="true"
                                    app:drawableEndCompat="@drawable/ic_drop_down" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/shape_border"
                                android:backgroundTint="@color/light_grey"
                                app:delayClickListener="@{()-> viewModel.onClickPeople()}"
                                android:layout_margin="@dimen/padding_8dp"
                                android:padding="@dimen/margin_10"
                                android:layout_gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/size_24"
                                    android:layout_height="@dimen/size_24"
                                    android:src="@drawable/people_users"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:layout_height="match_parent"
                                    android:text="@string/person"
                                    android:textSize="17sp"
                                    android:paddingHorizontal="@dimen/padding_5"
                                    android:textColor="@color/black"
                                    android:focusable="true"
                                    app:drawableEndCompat="@drawable/ic_drop_down" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:layout_margin="@dimen/margin_10"
                        android:paddingHorizontal="@dimen/size_5"
                        android:text="@string/ticket_available"
                        android:fontFamily="@font/font_bold"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        tools:ignore="SpUsage" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <include
                app:viewModel="@{viewModel}"
                layout="@layout/bottom_show_price_layout"/>

        </LinearLayout>

    </RelativeLayout>

</layout>
