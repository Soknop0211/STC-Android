<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/headerTitleLayout">

        <TextView
            android:id="@+id/headerInfoTv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_regular"
            android:maxLines="1"
            android:padding="@dimen/margin_10"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/btnSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_regular"
            android:maxLines="1"
            android:padding="@dimen/margin_10"
            android:text="@string/see_more_under_line"
            android:textColor="@color/colorAppPrimary"
            android:textSize="13sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/btnExploreMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_regular"
            android:maxLines="1"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:background="@drawable/bg_swap_app_appbar_strok"
            android:backgroundTint="@color/colorAppPrimary"
            android:paddingHorizontal="@dimen/margin_10"
            android:paddingVertical="@dimen/padding_5"
            android:text="@string/explore_more"
            android:textColor="@color/colorAppPrimary"
            android:textSize="13sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>