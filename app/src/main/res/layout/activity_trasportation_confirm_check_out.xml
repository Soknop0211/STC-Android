<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.Gravity" />

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.HappeningNowCheckOutViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_main"
        tools:context=".ui.todo_ui.ThingToDoDetailTicketActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                app:viewModel="@{viewModel}"
                android:id="@+id/toolbar"
                layout="@layout/custom_toolbar"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_10"
                        android:padding="@dimen/padding_5"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_margin="@dimen/size_5"
                            android:layout_width="match_parent"
                            android:text="@string/summary"
                            android:fontFamily="@font/font_bold"
                            android:maxLines="3"
                            android:textSize="@dimen/size_16sp"
                            android:layout_height="wrap_content"/>

                        <include
                            android:id="@+id/itemLayoutTaxi"
                            layout="@layout/transportation_item_type_layout"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/padding_5"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_margin="@dimen/size_5"
                            android:layout_width="match_parent"
                            android:text="@string/local_payment"
                            android:maxLines="3"
                            android:textSize="@dimen/size_16sp"
                            android:fontFamily="@font/font_bold"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/recyclerView"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/padding_5"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_margin="@dimen/size_5"
                            android:layout_width="match_parent"
                            android:text="@string/global_payment"
                            android:fontFamily="@font/font_bold"
                            android:maxLines="3"
                            android:textSize="@dimen/size_16sp"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/recyclerViewGlobal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/margin_10"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/note_driver"
                            android:maxLines="3"
                            android:textSize="@dimen/size_16sp"
                            android:fontFamily="@font/font_bold"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/margin_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            style="@style/SelectableItemBackground"
                            app:delayClickListener="@{()-> viewModel.onAddNote()}"
                            android:clickable="true"
                            android:layout_gravity="center"
                            android:focusable="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:background="@drawable/custom_background_dot_shape"
                                android:layout_height="match_parent"
                                android:gravity="@{TextUtils.isEmpty(viewModel.noteAdded) ? Gravity.CENTER : Gravity.START}"
                                tools:text="@string/add_note"
                                android:text="@{TextUtils.isEmpty(viewModel.noteAdded) ? @string/add_note : viewModel.noteAdded}"
                                android:textSize="17sp"
                                android:padding="@dimen/margin_10"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5"
                android:background="@drawable/custom_line_above_light_gray">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        tools:ignore="Suspicious0dp">

                        <TextView
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/price"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=" 80.00 USD"
                            android:text="@{viewModel.mPriceTotal}"
                            android:id="@+id/totalItemTv"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/padding_8dp"
                    style="@style/SelectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@drawable/card_view_shape"
                        android:backgroundTint="@color/colorAppPrimary"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/confirm"
                        android:textSize="17sp"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:paddingVertical="@dimen/margin_15"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>
