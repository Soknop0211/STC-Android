<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view"
            type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.SelectTypeBottomSheetViewModel" />
    </data>


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:padding="@dimen/padding_5"
        android:background="@{viewModel.getSelected ? @drawable/shape_border : @drawable/custom_background_card_item_type, default = @drawable/shape_border}"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_gravity="center"
            android:padding="@dimen/size_5"
            android:adjustViewBounds="true"
            android:id="@+id/icon_bank"
            android:src="@drawable/acleda_logo"
            app:setPlaceholder="@{@drawable/no_image}"
            app:setImageUrl="@{viewModel.image}"
            android:contentDescription="@string/content_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/size_5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@{viewModel.title}"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        tools:text="@string/app_name"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/txtTittle"
                        android:layout_width="wrap_content"
                        android:text="@{viewModel.status}"
                        android:textColor="@color/white"
                        android:visibility="@{TextUtils.isEmpty(viewModel.status) ? view.GONE : view.VISIBLE}"
                        android:paddingVertical="@dimen/size_3dp"
                        android:layout_marginStart="@dimen/padding_5"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:backgroundTint="@color/colorAppPrimary"
                        android:background="@drawable/custom_background_gradient_corner"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="@string/app_name"
                    android:text="@{viewModel.price}"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/descriptionTv"
                android:textSize="13sp"
                android:text="@{viewModel.description}"
                tools:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textColor="@color/gray"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

</layout>