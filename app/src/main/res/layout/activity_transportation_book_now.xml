<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mViewModel"
            type="com.eazy.stcbusiness.base.BaseViewModelObservation" />

        <variable
            name="viewModel"
            type="com.eazy.stcbusiness.view_model.TransportationBookingNowViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/google_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/center_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/location_pin" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_15"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/title_profile"
            android:focusable="true"
            android:src="@drawable/arrow_back_left"
            app:delayClickListener="@{()-> viewModel.onDismissButton()}"
            app:tint="@color/dark_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_sheet_bg"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/padding_5"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="3dp"
                    android:background="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_close_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:delayClickListener="@{()-> viewModel.onDismissButton()}"
                    app:tint="@color/black"
                    android:focusable="true"
                    android:contentDescription="@string/content_image" />

                <TextView
                    android:id="@+id/titleItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/book_now"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_bold"
                    android:textSize="@dimen/size_18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_5"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="@dimen/size_20"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/gray"
                        android:layout_marginVertical="@dimen/margin_10"
                        android:background="@drawable/custom_dot_verticle_line"/>

                    <View
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:backgroundTint="@color/colorAccent"
                        android:background="@drawable/ic_dot_unselect" />

                    <View
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_gravity="bottom"
                        android:background="@drawable/ic_dot_select" />

                </FrameLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/size_3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginBottom="@dimen/margin_10"
                        android:id="@+id/pickUpLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:fontFamily="@font/font_bold"
                                android:text="@string/pick_up"
                                android:paddingVertical="@dimen/size_3dp"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:fontFamily="@font/font_regular"
                                android:text="@{viewModel.mTitle}"
                                tools:text="Funmall, Strees 203 Sangkat Toul Kok" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/content_image"
                            android:rotation="-90"
                            android:src="@drawable/ic_drop_down" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:fontFamily="@font/font_bold"
                            android:text="@string/destination"
                            android:paddingVertical="@dimen/size_3dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="@dimen/margin_10"
                android:layout_marginHorizontal="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                style="@style/SelectableItemBackground"
                app:delayClickListener="@{()-> viewModel.onClickDestination()}"
                android:background="@drawable/shape_border"
                android:backgroundTint="@color/gray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_gravity="center"
                    android:contentDescription="@string/content_image"
                    android:src="@drawable/location_v2"
                    app:tint="@color/colorAppPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/padding_5"
                    android:contentDescription="@string/app_name"
                    android:fontFamily="@font/font_regular"
                    android:text="@string/where_to" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/content_image"
                    android:rotation="-90"
                    android:src="@drawable/ic_drop_down" />

            </LinearLayout>

            <Button
                android:id="@+id/setLocationButton"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5"
                android:background="@drawable/custom_background_border"
                android:backgroundTint="@color/colorAppPrimary"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/confirm_booking"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:elevation="4dp" />

        </LinearLayout>

    </RelativeLayout>

</layout>