<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/fragment_sheet"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_marginHorizontal="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="3dp"
                    android:background="@color/light_grey" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/title_profile"
                    android:focusable="true"
                    android:src="@drawable/baseline_close_24"
                    app:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/titleItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_note"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_bold"
                    android:textSize="@dimen/size_18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/padding_5"/>

            </LinearLayout>

            <EditText
                android:id="@+id/noteEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_15"
                android:paddingVertical="@dimen/margin_10"
                android:gravity="top"
                android:maxLength="100"
                android:hint="@string/add_note"
                android:textColorHint="@color/gray"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/padding_5"
                android:minHeight="@dimen/size_100"
                android:background="@drawable/shape_border"/>

            <TextView
                android:id="@+id/btnConfirm"
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5"
                android:padding="@dimen/margin_15"
                android:gravity="center"
                android:background="@drawable/custom_background_border"
                android:backgroundTint="@color/colorAppPrimary"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:elevation="4dp" />

        </LinearLayout>

    </RelativeLayout>

</layout>