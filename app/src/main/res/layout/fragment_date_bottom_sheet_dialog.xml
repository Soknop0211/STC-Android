<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <View
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="3dp"
                        android:background="@color/light_grey" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="@string/title_profile"
                        android:focusable="true"
                        android:src="@drawable/baseline_close_24"
                        app:tint="@color/dark_gray" />

                    <TextView
                        android:id="@+id/titleItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/select_schedule"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_bold"
                        android:textSize="@dimen/size_18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_5"/>

                </LinearLayout>

                <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
                    android:id="@+id/select_date_time_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:picker_curved="true"
                    app:picker_cyclic="true"
                    app:picker_visibleItemCount="7" />

                <TextView
                    android:id="@+id/btnConfirm"
                    style="@style/SelectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_5"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:padding="@dimen/margin_15"
                    android:gravity="center"
                    android:background="@drawable/custom_background_border"
                    android:backgroundTint="@color/colorAppPrimary"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/confirm_schedule"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:elevation="4dp" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</layout>